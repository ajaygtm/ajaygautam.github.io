---
import Layout from '~/layouts/PageLayout.astro';
import experience from '~/content/data/experience.json';

const meta = {
	title: 'Experience — Ajay Gautam',
	description: 'Professional data science consulting experience & project portfolio timeline',
};

function formatDateRange(start, end) {
	return `${start} – ${end}`;
}
---

<Layout {meta}>
	<section class="max-w-5xl mx-auto px-4 py-12">
		<h1 class="text-4xl md:text-5xl font-bold mb-12 font-heading text-center">Experience</h1>
		<ol class="relative border-l border-gray-300 dark:border-gray-700">
			{experience.map(entry => (
				<li class="mb-14 ml-4">
					<div class="absolute -left-1.5 w-3 h-3 rounded-full ring-4 ring-white dark:ring-gray-900 bg-primary-600"/>
					<header class="mb-4">
						<h2 class="text-xl md:text-2xl font-semibold">
							{entry.role} — {entry.company}
						</h2>
						<p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400 mt-1">
							{formatDateRange(entry.start, entry.end)}
						</p>
						{entry.summary && (
							<p class="mt-3 text-sm md:text-base text-gray-700 dark:text-gray-300 leading-relaxed">
								{entry.summary}
							</p>
						)}
					</header>

					{entry.bullets && entry.bullets.length > 0 && (
						<ul class="list-disc ml-5 mb-6 space-y-1 text-gray-700 dark:text-gray-300">
							{entry.bullets.map(b => <li>{b}</li>)}
						</ul>
					)}

					{entry.projects && entry.projects.length > 0 && (
						<div class="space-y-8">
							{entry.projects.map(project => (
								<div class="group border border-gray-200 dark:border-gray-700 rounded-xl p-5 bg-white dark:bg-gray-900 hover:border-primary-500 transition-colors">
									<h3 class="text-lg md:text-xl font-semibold mb-2 group-hover:text-primary-600">
										{project.name}
									</h3>
									{project.impact && (
										<p class="text-xs font-medium text-primary-600 dark:text-primary-400 mb-2">
											Impact: {project.impact}
										</p>
									)}
									<ul class="list-disc ml-5 space-y-1 text-gray-700 dark:text-gray-300">
										{project.bullets?.map(line => <li>{line}</li>)}
									</ul>
									{(project.tech?.length > 0) && (
										<p class="mt-3 text-[11px] uppercase tracking-wide text-gray-500 dark:text-gray-400">
											Tech: {project.tech.join(', ')}
										</p>
									)}
								</div>
							))}
						</div>
					)}

					{entry.tech && entry.tech.length > 0 && (
						<p class="mt-4 text-[11px] uppercase tracking-wide text-gray-500 dark:text-gray-400">
							Stack: {entry.tech.join(', ')}
						</p>
					)}
				</li>
			))}
		</ol>
	</section>
</Layout>
