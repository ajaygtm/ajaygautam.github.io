---
import Layout from '~/layouts/PageLayout.astro';
import experience from '~/content/data/experience.json';

const meta = {
	title: 'Experience — Ajay Gautam',
	description: 'Professional data science experience & impact timeline',
};
---

<Layout {meta}>
	<section class="max-w-4xl mx-auto px-4 py-12">
		<h1 class="text-4xl md:text-5xl font-bold mb-10 font-heading text-center">Experience</h1>
		<ol class="relative border-l border-gray-300 dark:border-gray-700">
			{experience.map(item => (
				<li class="mb-10 ml-4">
					<div class="absolute -left-1.5 w-3 h-3 rounded-full ring-4 ring-white dark:ring-gray-900 bg-primary-600"/>
					<h3 class="text-xl font-semibold">{item.role} — {item.company}</h3>
					<p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400 mt-1">
						{item.start} – {item.end}
					</p>
					<ul class="list-disc ml-5 mt-3 space-y-1 text-gray-700 dark:text-gray-300">
						{item.bullets.map(bullet => <li>{bullet}</li>)}
					</ul>
					{item.tech && (
						<p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
							Tech: {item.tech.join(', ')}
						</p>
					)}
				</li>
			))}
		</ol>
	</section>
</Layout>
